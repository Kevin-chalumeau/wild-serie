{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-light table-striped table-bordered mt-3">
                    <thead class="thead-dark">
                    <tr>
                        <th>Acteurs</th>
                        <th>Voir</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for actor in program.actors %}
                        <tr>
                            <td>{{ actor.name }}</td>
                            <td>
                                <a class="btn btn-success text-white" href="{{ path('actor_show', {'id': actor.id}) }}">Voir</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">Pas d'acteur trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>



    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
